{
  "compilerOptions": {
    "target": "ES2023",
    "module": "commonjs",
    "typeRoots": [
      "src/@types",
      "node_modules/@types"
    ],
    "rootDir": "./src",
    "outDir": "./dist",
    "removeComments": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  }
}